    <script>
      var u = angular.module('uglyfruit', []);
    </script>

  </head>
  <body class="homepage" ng-app="uglyfruit" ng-cloak>
    <div id="page-wrapper">

      <!-- Header -->
        <div id="header">

          <!-- Inner -->
            <div class="inner">
              <header>
                <h1><a href="/" id="logo">醜蔬果大翻身</a></h1>
                <hr/>
                <p>透過購買好品質的醜蔬果來減少浪費，這片土地就翻身成功！</p>
              </header>
              <footer>
                <a target="_blank" href="https://docs.google.com/forms/d/1RwmlCV3eNaFXOSwX17juq9OeABGdGBqoLhGEhyYtylQ/viewform" class="button circled scrolly">立即購買</a>
                </br></br></br></br></br></br>
                <a href="#what" class="scrolly">了解更多</a>
              </footer>
            </div>

          <%- partial('components/nav') %>

        </div>

      <!-- Main -->
        <div class="wrapper style2" id="what">
          <a class="image fit"><img src="/images/slide/slide1.jpg"/></a>
          <a class="image fit"><img src="/images/slide/slide2.jpg"/></a>
          <a class="image fit"><img src="/images/slide/slide4.jpg"/></a>
        </div>

      <!-- Farmer -->
        <div class="wrapper style1" id="farmer">

          <section id="features" class="container special">
            <header>
              <h2>農友介紹</h2>
            </header>
            <div class="row">
              <article class="4u 12u(mobile) special">
                <a class="image featured"><img src="/images/farmer/1.jpg" alt="" /></a>
                <header>
                  <h3>蔡警煌 先生</h3>
                  </br>
                  <h4>雲林水林薯長有機農場</h4>
                </header>
              </article>
              <article class="4u 12u(mobile) special">
                <a class="image featured"><img src="/images/farmer/3.jpg" alt="" /></a>
                <header>
                  <h3>洪箱 阿姨</h3>
                  </br>
                  <h4>苗栗灣寶</h4>
                </header>
              </article>
              <article class="4u 12u(mobile) special">
                <a class="image featured"><img src="/images/farmer/5.jpg" alt="" /></a>
               <header>
                  <h3>張家芸 小姐</h3>
                  </br>
                  <h4>高雄六龜享家蔬果園</h4>
                </header>
              </article>
            </div>
            <footer>
              <a href="/farmer" class="button">看更多農友</a>
            </footer>
          </section>

        </div>

      <!-- Product -->
        <div class="wrapper style1" id="product">

          <section id="features" class="container special">
            <header>
              <h2>產品介紹</h2>
            </header>
            <div class="row">
              <article class="3u 12u(mobile) special">
                <a class="image featured"><img src="/images/product/1.jpg" alt="" /></a>
                <header>
                  <h3>檸檬</h3>
                  </br>
                  <h4>高雄六龜</h4>
                </header>
              </article>
              <article class="3u 12u(mobile) special">
                <a class="image featured"><img src="/images/product/2.jpg" alt="" /></a>
                <header>
                  <h3>芭樂</h3>
                  </br>
                  <h4>高雄六龜</h4>
                </header>
              </article>
              <article class="3u 12u(mobile) special">
                <a class="image featured"><img src="/images/product/3.jpg" alt="" /></a>
               <header>
                  <h3>白蘿蔔</h3>
                  </br>
                  <h4>高雄六龜</h4>
                </header>
              </article>
              <article class="3u 12u(mobile) special">
                <a class="image featured"><img src="/images/product/4.jpg" alt="" /></a>
               <header>
                  <h3>台農 57 地瓜</h3>
                  </br>
                  <h4>雲林水林</h4>
                </header>
              </article>
            </div>
            <footer>
              <a target="_blank" href="https://docs.google.com/forms/d/1RwmlCV3eNaFXOSwX17juq9OeABGdGBqoLhGEhyYtylQ/viewform" class="button">立即購買</a>
            </footer>
          </section>

        </div>

      <!-- CTA -->
        <div class="wrapper style1" id="cta">
          <section id="features" class="container special" ng-controller="messageCtrl" ng-cloak>
            <header>
              <h2>聯絡我們</h2>
            </header>
            <section id="content" ng-submit="send_message()">
              <form>
                <div class="row uniform">
                  <div class="6u 12u$(3)">
                    <input type="text" placeholder="名字" ng-model="name"/>
                  </div>
                  <div class="6u 12u$(3)">
                    <input type="text" placeholder="Email" ng-model="email"/>
                  </div>
                  <div class="12u 12u$(3)">
                    <textarea ng-model="text" placeholder="您的回饋" rows="6"></textarea>
                  </div>
                </div>
                </br>
              </form>
            </section> 
            <footer>
              <h3>{{ error_message }}</h3>
              </br>
              <a ng-click="send_message()" style="cursor:pointer;" class="button">送出</a>
            </footer>
          </section>
        </div>

        <script>
          u.controller('messageCtrl', function($scope, $rootScope, $http) {
            $scope.name = '';
            $scope.email = '';
            $scope.text = '';
            $scope.send_message = function() {
              $scope.error_message = '';
              if($scope.name == ''){
                $scope.error_message = '請輸入您的名字';
                return;
              }
              if($scope.email == ''){
                $scope.error_message = '請輸入您的Email';
                return;
              }
              if($scope.text == ''){
                $scope.error_message = '請輸入您的回饋';
                return;
              }
              $http.post('/message/create_message', {
                name: $scope.name,
                email: $scope.email,
                text: $scope.text,
              })
              .success(function(response, status) {
                console.log(response);
                window.alert('謝謝您！會儘快跟您聯繫～');
              })
              .error(function(response, status) {
                console.log(response);
              })
              return;
            }
          });
          </script>

        <%- partial('components/footer') %>

    </div>

  </body>
</html>